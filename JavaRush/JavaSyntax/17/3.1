package com.javarush.task.pro.task16.task1604;

import java.util.Calendar;
import java.util.GregorianCalendar;
import java.util.HashMap;

/* 
День недели рождения твоего
*/

public class Solution {

    static Calendar birthDate=new GregorianCalendar(2003,Calendar.JULY,11);

    public static void main(String[] args) {
        System.out.println(getDayOfWeek(birthDate));
    }

    static String getDayOfWeek(Calendar calendar) {
        HashMap<Integer, String> hashMap = new HashMap<>();
        hashMap.put(1, "Воскресенье");
        hashMap.put(2, "Понедельник");
        hashMap.put(3, "Вторник");
        hashMap.put(4, "Среда");
        hashMap.put(5, "Четверг");
        hashMap.put(6, "Пятница");
        hashMap.put(7, "Суббота");

        int key = calendar.get(Calendar.DAY_OF_WEEK);
        return hashMap.get(key);
    }
}
